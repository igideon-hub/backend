<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dashboard</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background:#f8f9fa; }
        .card-stats { min-height:110px; }
        .small-muted { font-size:0.85rem; color:#6c757d; }
        .chart-card { height:300px; }
        .table-fixed { max-height:300px; overflow:auto; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">App Dashboard</a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">Signed in as <strong><%= (user && user.name) ? user.name : 'Guest' %></strong></span>
                <a class="btn btn-sm btn-outline-light" href="/signin">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <% const s = typeof stats !== 'undefined' ? stats : {}; %>

        <div class="row g-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-stats shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small-muted">Total Users</h6>
                                <h3><%= s.totalUsers ?? 0 %></h3>
                            </div>
                            <div class="text-end">
                                <i class="bi bi-people" style="font-size:28px;"></i>
                            </div>
                        </div>
                        <div class="small-muted mt-2">Updated just now</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-stats shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small-muted">Active Sessions</h6>
                                <h3><%= s.activeSessions ?? 0 %></h3>
                            </div>
                            <div class="text-end">
                                <i class="bi bi-graph-up" style="font-size:28px;"></i>
                            </div>
                        </div>
                        <div class="small-muted mt-2">Live</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-stats shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small-muted">New Messages</h6>
                                <h3><%= s.newMessages ?? 0 %></h3>
                            </div>
                            <div class="text-end">
                                <i class="bi bi-chat-left-dots" style="font-size:28px;"></i>
                            </div>
                        </div>
                        <div class="small-muted mt-2">Unread</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-stats shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="text-uppercase small-muted">Tasks Completed</h6>
                                <h3><%= s.tasksCompleted ?? 0 %></h3>
                            </div>
                            <div class="text-end">
                                <i class="bi bi-check2-circle" style="font-size:28px;"></i>
                            </div>
                        </div>
                        <div class="small-muted mt-2">This month</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4 g-3">
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header">
                        Activity (last 7 days)
                    </div>
                    <div class="card-body chart-card">
                        <canvas id="activityChart" style="width:100%; height:100%;"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header">Recent Users</div>
                    <div class="card-body table-fixed p-0">
                        <table class="table table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th class="d-none d-md-table-cell">Email</th>
                                    <th class="text-end">Joined</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Array.isArray(recentUsers) && recentUsers.length) { %>
                                    <% recentUsers.forEach(u => { %>
                                        <tr>
                                            <td><%= u.name %></td>
                                            <td class="d-none d-md-table-cell"><%= u.email %></td>
                                            <td class="text-end small-muted"><%= u.joinedAt || 'â€”' %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="text-center small-muted py-4">No recent users</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <footer class="mt-4 text-center small-muted">
            &copy; <%= new Date().getFullYear() %> App Dashboard
        </footer>
    </main>

    <!-- Icons (Bootstrap Icons) and Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <script>
        (function(){
            // prepare chart data from server-provided stats
            const labels = JSON.parse('<%- JSON.stringify(s.chartLabels || ["Mon","Tue","Wed","Thu","Fri","Sat","Sun"]) %>');
            const data = JSON.parse('<%- JSON.stringify(s.chartValues || [12,19,7,14,9,20,16]) %>');

            const ctx = document.getElementById('activityChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Active users',
                            data: data,
                            borderColor: 'rgba(13,110,253,0.9)',
                            backgroundColor: 'rgba(13,110,253,0.12)',
                            tension: 0.25,
                            fill: true,
                            pointRadius: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: { grid: { display: false } },
                            y: { beginAtZero: true }
                        }
                    }
                });
            }
        })();
    </script>
</body>
</html>